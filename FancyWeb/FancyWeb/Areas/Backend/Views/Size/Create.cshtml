@model FancyWeb.Models.Size
@{
    ViewBag.Title = "Create";
}

<div class="row">
    <div class="offset-2 col-10">
        <h2 style="color:blue; width:400px;">尺吋大小新增</h2>
    </div>
</div>
<div class="container">
    <hr />
    @using (Html.BeginForm("Create", "Size", new { area = "Backend" }, FormMethod.Post, new { novalidate = "novalidate" }))
    {
        @*@Html.HiddenFor(p => p.CategoryMID)*@

        <div class="form-group row">
            @Html.LabelFor(p => p.SizeName, new { @class = "col-sm-2 col-form-label", style = "text-align:right;" })
            <div class="col-sm-10">
                @Html.EditorFor(p => p.SizeName, new { htmlAttributes = new { @class = "form-control", placeholder = "輸入尺吋大小名稱" } })
                @Html.ValidationMessageFor(p => p.SizeName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-4 col-sm-8">
                <input type="submit" value="存檔" class="btn btn-success" />
            </div>
        </div>
    }
    <hr />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div>
        @Html.ActionLink("返回", "Index", "Size", new { area = "Backend" }, null)
    </div>
</div>





