    <script src="~/Scripts/jquery.signalR-2.2.2.js"></script>
    <script src="~/signalr/hubs"></script>
    <script>
        $(function () {
            var myid = @ViewBag.uid;
            var myname = "@ViewBag.uname";
            var serviceid = @ViewBag.suid;
            //var servicename = "@ViewBag.suname";
            var servicename = "客服專線";
            var chooseuser = 0;  /*被選擇要talk的userid*/

            var chat = $.connection.charHub;   /*宣告連線變數*/

            //=================
            //=================
            //=================

            //上線時將使用者由"離線"改為"上線",並排到最上層  Note-01
            chat.client._login = function (id) {
                $("#usersli1").prepend($(`#li1${id}`));
                $(`#uItem${id}`).addClass('active');
                //alert(`=> 1`);
            }


            ///////////登出作業 Note-02
            chat.client.logout = function () {
                document.location.href = `@Url.Action("Index", "Login", new { Area = "Members" })`;
            }

            chat.client._logout = function (id) {
                $(`#uItem${id}`).removeClass('active');
            }

            //已讀 Note-05
            chat.client.isread = function (fromid, toid, msgid) {
                if (fromid == chooseuser) {
                    $(`#msg1${msgid}`).addClass('active');
                }
            }

            //全部人員列表 (左上方)   Note-03
            //離線時將使用者由"上線"改為"離線",並排到最上層   Note-02
            chat.client.userlist = function (id, name, email1, photoid, phone) {
                var li1 = `<li  id="li1${id}">`;
                li1 += `<div class="uItem active" id="uItem${id}">`;
                li1 += `<img src="@Url.Action("GetImageByte","AddStock", new { Area = "Backend" })/${photoid}" style="width:60px; height:60px;border-radius: 50%;"/>`;
                li1 += `<div class="user_data py-1 text-center">`;
                li1 += `<p class="my-0">`;
                li1 += `<span class="badge badge-pill badge-dark">${name}</span>`;
                li1 += `</p>`;
                li1 += `<p class="my-0">${email1}</p>`;
                li1 += `</div>`;
                li1 += `<span>${phone}</span>`;
                li1 += `</div>`;
                li1 += `</li>`;
                $("#usersli1").append($(li1));
                $(`#uItem${id}`).removeClass('active');

                //左上方全部user列表, 點擊事件
                $(`#li1${id}`).on('click', function () {
                    $("#titlename1").text(name);
                    $("#chat-messages-inner1").html("");

                    //左下方聊天人員列表
                    if ($(`#isread1${id}`).html() == null) {
                        var li2 = `<li id="ut1-${id}" class="list-inline-item">`
                        li2 += `<p class="badge badge-pill badge-dark">${name}</p>`;
                        li2 += `<p><img class="img-thumbnail" src="@Url.Action("GetImageByte","AddStock", new { Area = "Backend" })/${photoid}" style="width:60px; height:60px;border-radius: 50%;"/>`;
                        li2 += `<span id="isread1${id}" class="badge badge-danger unread"></span></p>`
                        li2 += `</li>`
                        $("#messageuser1").append($(li2));

                        $(`#ut1-${id}`).on('click', function () {
                            $("#titlename1").text(name);
                            $("#chat-messages-inner1").html("");

                            //已讀  Note-05
                            chat.server.isread(myid, id);

                            //點選欲回應的user Note-07
                            chat.server.callmessage(myid, id);

                            $(`#isread1${id}`).text("");
                            chooseuser = id;
                        });
                    }

                    $(`#isread1${id}`).text("");
                    chooseuser = id;

                    //已讀  Note-05
                    chat.server.isread(myid, id);

                    //點選欲回應的user Note-07
                    chat.server.callmessage(myid, id);
                });

                if (id == serviceid) {
                        $("#chat-messages-inner1").html("");
                        //已讀  Note-05
                        chat.server.isread(myid, id);

                        //點選欲回應的user Note-07
                        chat.server.callmessage(myid, id);
                }
            }

            //聊天人員列表 (左下方)   Note-04
            chat.client._messageuser = function (id, name, talkcontent, isreadCnt, photoid) {
                if (id > 0) {
                        var li2 = `<li id="ut1-${id}" class="list-inline-item">`
                        li2 += `<p class="badge badge-pill badge-dark">${name}</p>`;
                        li2 += `<p><img class="img-thumbnail" src="@Url.Action("GetImageByte","AddStock", new { Area = "Backend" })/${photoid}" style="width:60px; height:60px;border-radius: 50%;"/>`;
                        li2 += `<span id="isread1${id}" class="badge badge-danger unread"></span></p>`
                        li2 += `</li>`
                        $("#messageuser1").append($(li2));

                    if (isreadCnt != 0) {
                        $(`#isread1${id}`).text(`${isreadCnt}`);
                    }
                    else {
                        $(`#isread1${id}`).text("");
                    }

                    $(`#ut1-${id}`).on('click', function () {
                        $("#titlename1").text(name);
                        $("#chat-messages-inner1").html("");
                        //已讀  Note-05
                        chat.server.isread(myid, id);

                        //點選欲回應的user Note-07
                        chat.server.callmessage(myid, id);

                        $(`#isread1${id}`).text("");
                        chooseuser = id;
                    });
                }
            }


            /////////發送訊息 Note-06
            chat.client.sendMessage = function (fromid, from, toid, message, date, msgid, photoid) {
                if ((fromid == myid) && (toid > 0)) {
                    var li3 = `<li class="clearfix odd">`;
                    li3 += `<div class="chat-avatar">`;
                    li3 += `<img src="@Url.Action("GetImageByte","AddStock", new { Area = "Backend" })/${photoid}" style="width:50px; height:50px;border-radius: 50%;"/>`;
                    li3 += `<span class="time">${date}</span>`;
                    li3 += `</div><div class="conversation-text">`;
                    li3 += `<div id="msg1${msgid}" class="ctext-wrap">`;
                    //li3 += `<span class="user-name">${from}</span>`;
                    li3 += `<p>${message}</p>`;
                    li3 += `</div >`;
                    li3 += `</div>`;
                    li3 += `</li>`;
                    $("#chat-messages-inner1").append($(li3));
                    $("#messageuser1").prepend($(`#ut1-${fromid}`));

                    var $div = $("#chat-messages-inner1");
                    $div.scrollTop($div[0].scrollHeight);
                }
                else if ((fromid == chooseuser) && (toid > 0)) {

                    //已讀 Note-05
                    chat.server.isread(myid, fromid);

                    var li3 = `<li class="clearfix">`;
                    li3 += `<div class="chat-avatar">`;
                    li3 += `<img src="@Url.Action("GetImageByte","AddStock", new { Area = "Backend" })/${photoid}" style="width:50px; height:50px;border-radius: 50%;"/>`;
                    li3 += `<span class="time">${date}</span>`;
                    li3 += `</div><div class="conversation-text">`;
                    li3 += `<div id="msg1${msgid}" class="ctext-wrap">`;
                    //li3 += `<span class="user-name">${from}</span>`;
                    li3 += `<p>${message}</p>`;
                    li3 += `</div >`;
                    li3 += `</div>`;
                    li3 += `</li>`;
                    $("#chat-messages-inner1").append($(li3));
                    $("#messageuser1").prepend($(`#ut1-${fromid}`));

                    var $div = $("#chat-messages-inner1");
                    $div.scrollTop($div[0].scrollHeight);
                }
                else if (toid > 0 && $(`#ut1-${fromid}`).text() == "") {
                    var li2 = `<li id="ut1-${fromid}" class="list-inline-item">`
                        li2 += `<p class="badge badge-pill badge-dark">${from}</p>`;
                        li2 += `<p><img class="img-thumbnail" src="@Url.Action("GetImageByte","AddStock", new { Area = "Backend" })/${photoid}" style="width:60px; height:60px;border-radius: 50%;"/>`;
                        li2 += `<span id="isread1${fromid}" class="badge badge-danger unread"></span></p>`
                        li2 += `</li>`
                    $("#messageuser1").append($(li2));

                        $(`#isread1${fromid}`).text(1);
                        $(`#ut1-${fromid}`).click(function () {
                            $("#titlename1").text(from);
                            $("#chat-messages-inner1").html("");

                            //已讀 Note-05
                            chat.server.isread(myid, fromid);

                            //點選欲回應的user Note-07
                            chat.server.callmessage(myid, fromid);

                            $(`#isread1${fromid}`).text("");
                            chooseuser = fromid;
                        })
                }
                else if (toid > 0) {
                    if ($(`#isread1${fromid}`).text() != "") {
                        var a = +$(`#isread1${fromid}`).text() + 1;
                        $(`#isread1${fromid}`).text(a);
                    }
                    else { $(`#isread1${fromid}`).text(1) }
                    $("#messageuser1").prepend($(`#ut1-${fromid}`));
                }
            }


            //訊息內容   Note-08
            chat.client.messagelog = function (fromid, fromname, TalkDetail, Date, msgid, photoid , isread) {
                if (fromid == myid) {
                    var li3 = `<li class="clearfix odd">`;
                    li3 += `<div class="chat-avatar">`;
                    li3 += `<img src="@Url.Action("GetImageByte","AddStock", new { Area = "Backend" })/${photoid}" style="width:50px; height:50px;border-radius: 50%;"/>`;
                    li3 += `<span class="time">${Date}</span>`;
                    li3 += `</div><div class="conversation-text">`;
                    li3 += `<div id="msg1${msgid}" class="ctext-wrap">`;
                    //li3 += `<span class="user-name">${fromname}</span>`;
                    li3 += `<p>${TalkDetail}</p>`;
                    li3 += `</div >`;
                    li3 += `</div>`;
                    li3 += `</li>`;
                    $("#chat-messages-inner1").append($(li3));

                    var $div = $("#chat-messages-inner1");
                    $div.scrollTop($div[0].scrollHeight);
                    if (isread) {
                        $(`#msg1${msgid}`).addClass('active');
                    }
                }
                else {
                    var li3 = `<li class="clearfix">`;
                    li3 += `<div class="chat-avatar">`;
                    li3 += `<img src="@Url.Action("GetImageByte","AddStock", new { Area = "Backend" })/${photoid}" style="width:50px; height:50px;border-radius: 50%;"/>`;
                    li3 += `<span class="time">${Date}</span>`;
                    li3 += `</div><div class="conversation-text">`;
                    li3 += `<div id="msg1${msgid}" class="ctext-wrap">`;
                    //li3 += `<span class="user-name">${fromname}</span>`;
                    li3 += `<p>${TalkDetail}</p>`;
                    li3 += `</div >`;
                    li3 += `</div>`;
                    li3 += `</li>`;
                    $("#chat-messages-inner1").append($(li3));

                    var $div = $("#chat-messages-inner1");
                    $div.scrollTop($div[0].scrollHeight);
                }
            }

            //=================
            //=================
            //=================

            //開始連線 Note-00
            $.connection.hub.start().done(function () {
                //客服預設聊天對象為0, 必須要人工挑選才能對話
                if (myid == serviceid) {
                    chooseuser = 0;
                }
                else {  //一般會員, 則聊天對象預設為Service的ID
                    chooseuser = serviceid;
                    $("#titlename1").text(servicename);

                    if ($(`#isread1${serviceid}`).text() != "") {

                        //已讀 Note-05
                        chat.server.isread(myid, chooseuser);

                        //點選欲回應的user Note-07
                        chat.server.callmessage(myid, chooseuser);
                    }
                }

                //連線作業 Note-01
                chat.server.login(myid, myname);

                //發送訊息  Note-06
                $("#send1").on('click', function () {
                    //訊息必須輸入才會發送訊息
                    if ($('#msgbox1').val() > " ")
                    {
                        chat.server.sendMsg(myid, chooseuser, $('#msgbox1').val());
                    }

                    //清空訊息欄位,並將游標停駐在欄位中
                    $("#msgbox1").val('').focus();
                });

                //搜尋會員(左上方) Note-10
                $("#search1").keypress(function (event) {
                    $("#usersli1").html("");
                    chat.server.searchuser(myid, $('#search1').val());
                });
            });

        });


    </script>
