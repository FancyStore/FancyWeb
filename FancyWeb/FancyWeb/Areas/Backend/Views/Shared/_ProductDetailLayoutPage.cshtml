<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <link href="~/Content/_LayoutPlugin/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css">
    <link href="~/Content/_LayoutPlugin/css/style.css" rel="stylesheet" />
    <link href="~/Content/_LayoutPlugin/css/Bounce.css" rel="stylesheet" />
    <link href="~/Content/_LayoutPlugin/css/Fancy.css" rel="stylesheet" />
    <link href="~/Content/_LayoutPlugin/animsition/css/animsition.min.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    @RenderSection("styles", false)
</head>
<body class="animsition">
    <header>
        <!-- MAIN HEADER -->
        <div id="header">
            <!-- container -->
            <div class="container">
                <!-- row -->
                <div class="row">
                    <!-- LOGO -->
                    <div class="col-md-3 d-flex justify-content-center align-items-center">
                        <div class="header-logo">
                            <a href="#" class="logo">
                                <h1 class="text-white display-2">Fancy</h1>
                            </a>
                        </div>
                    </div>
                    <div class="col-md-6 d-flex justify-content-center align-items-center">
                        <div class="header-title">
                            <a href="#" class="title">
                                <h1 class="text-white display-4">好感衣著購物網</h1>
                            </a>
                        </div>
                    </div>
                    <!-- /LOGO -->
                </div>
                <!-- row -->
            </div>
            <!-- container -->
        </div>
        <!-- /MAIN HEADER -->
    </header>

    <nav id="navigation" class="sticky-top">
        <!-- container -->
        <div class="container d-flex justify-content-center text-center">
            <!-- responsive-nav -->
            <div id="responsive-nav">
                <!-- NAV -->
                <ul class="main-nav nav navbar-nav flex-md-row">
                    <li><a href="#"></a></li>
                </ul>
                <!-- /NAV -->
            </div>
            <!-- /responsive-nav -->
        </div>
        <!-- /responsive-nav -->
    </nav>

      <div id="Main" class="my-container my-5 d-flex">
    @*<div id="Main" class="my-container d-flex justify-content-center text-center">*@
          <div class="row">
              <div class="col-2"></div>
              <div class="col-8">
                  @RenderBody()
              </div>
              <div class="col-2"></div>
          </div>
    </div>


    <script src="~/Content/_LayoutPlugin/js/jquery.min.js"></script>
    <script src="~/Content/_LayoutPlugin/js/bootstrap.min.js"></script>
    <script src="~/Content/_LayoutPlugin/animsition/js/animsition.min.js"></script>
    <script src="~/Content/_LayoutPlugin/js/Fancy.js"></script>
    @RenderSection("scripts", false)
</body>
</html>